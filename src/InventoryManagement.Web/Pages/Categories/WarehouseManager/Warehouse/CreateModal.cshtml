<form abp-model="ViewModel" data-ajaxForm="true" asp-page="CreateModal">
    <abp-modal size="Large">
        <abp-modal-header title="@L["CreateWarehouse"].Value"></abp-modal-header>
        <abp-modal-body>
            @if (Model.checkTenantId)
            {
                <abp-select asp-for="ViewModel.TenantId" asp-items="Model.TenantListItems" >
                    <option value="">-</option>
                </abp-select>
            }else{
                <abp-select asp-for="ViewModel.TenantId" asp-items="Model.TenantListItems" disabled/>
            }
            
            <abp-input asp-for="ViewModel.WarehouseName"/>
            <abp-input asp-for="ViewModel.WarehouseAddress"/>
            <abp-input asp-for="ViewModel.WarehouseNote"/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>